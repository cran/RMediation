     citHeader("To cite package 'RMediation' in publications use:")
     
     ## R >= 2.8.0 passes package metadata to citation().
     if(!exists("meta") || is.null(meta)) meta <- packageDescription("RMediation")
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
     vers <- paste("R package version", meta$Version)
     
     citEntry(entry="Article",
              title = "RMediation: An R Package for Mediation Analysis",
              author = personList(as.person("Davood Tofighi"),
                                  as.person("David P. MacKinnon")),
	    journal="Submitted for publication",
              year = year,
              textVersion =
              paste("Tofighi, D.  & ",
                    "MacKinnon, D. P. (",
                    year,
                    "). RMediation: An R Package for Mediation Analysis. ", "Submitted for publication.", sep=""))
